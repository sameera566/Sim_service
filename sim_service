balance = 100

print("1 = Check Balance")
print("2 = Recharge")
print("3 = Buy Internet (50 PKR)")

choice = input("Enter option: ")

if choice == "1":
    print("Balance:", balance)

elif choice == "2":
    amount = int(input("Enter amount: "))
    balance = balance + amount
    print("New Balance:", balance)

elif choice == "3":
    if balance >= 50:
        balance = balance - 50
        print("Internet Activated! New Balance:", balance)
    else:
        print("Not enough balance")

else:
    print("Wrong option")